<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputAlamat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginBottom="@dimen/dimen_3"
            android:background="@color/red"
            android:theme="@style/ToolbarTheme"
            app:titleTextColor="@color/white" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            app:boxBackgroundColor="@color/gray2"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:hint="Alamat Lengkap"
            android:textColor="@color/black"
            android:textColorHint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight"/>

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3"
                android:text="Tulis Rumah, Kos, Kantor, dll" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            app:boxBackgroundColor="@color/gray2"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:hint="Detail Alamat"
            android:textColor="@color/black"
            android:textColorHint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight" />
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3"
                android:text="Tulis nama jalan/kantor/no. lantai/no. rumah" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            app:boxBackgroundColor="@color/gray2"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:hint="Label"
            android:textColor="@color/black"
            android:textColorHint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight" />
            <TextView
                android:id="@+id/tvLabelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3"
                android:text="Tulis Rumah, Kos, Kantor, dll" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            app:boxBackgroundColor="@color/gray2"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:hint="Nama Penerima"
            android:textColor="@color/black"
            android:textColorHint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight" />
            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            app:boxBackgroundColor="@color/gray2"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray"
            android:hint="No. Handphone"
            android:textColor="@color/black"
            android:textColorHint="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNoHp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight"
                android:drawableEnd="@drawable/baseline_perm_contact_calendar_24"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tvNoHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_3"
            android:checked="false"
            android:gravity="left"
            android:text="Jadikan Sebagai alamat utama" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_4"
            android:background="@color/blue"
            android:text="Simpan"
            android:textColor="#212121" />
    </LinearLayout>


</ScrollView>